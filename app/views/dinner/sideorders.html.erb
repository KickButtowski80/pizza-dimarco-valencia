<style>
    .card{
        height: 175px;
    }
</style>

<div class="container jumbotron">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1> Side Orders</h1>        
        </div>
    </div>
    <div class="row">         
      <% SideOrdersDinnerConfig.current_menu.each do |subject,item| %>
         <% item.each_with_index do |i,index| %>           
          
            <div class='col-md-4'>       
              <div  class="card"  >
                <div class="card-body">
                  <h3 class="card-title"><%= i['name']%>	</h3>   
                  <a href="#" class="btn btn-primary"><%= i["price"]%>	</a>
                </div>
              </div> 
            </div> 
          <%end%>
      <%end%>  
  </div>
   <div class="row">
       <div class="col-md-6">
         <div  class="card"  >
            <div class="card-body">
              <h3 class="card-title"> Hot Wings</h3>   
              <a href="#" class="btn btn-primary"> (7) $7.50</a>
              <a href="#" class="btn btn-primary"> (12) $10.95</a>
            </div>
          </div>        
       </div>
       <div class="col-md-6">
          <div  class="card"  >
            <div class="card-body">
              <h3 class="card-title">Bread Stick</h3>   
              <a href="#" class="btn btn-primary"> (1) $0.99</a>
              <a href="#" class="btn btn-primary"> (6) $4.95</a>
            </div>
          </div>  
         
       </div>
   </div>
   <%= render 'shared/back_to_dinner_page' %>
   
</div>    